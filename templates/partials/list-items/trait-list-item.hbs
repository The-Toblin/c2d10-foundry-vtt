<tr class="trait-item asset-item" data-id="{{id}}">
    <td class="c2d10-contentbox {{#if showEffects}}fancy-effects{{/if}} asset">
        <a class="delete-item" title="{{localize " c2d10.sheet.delete"}}">
            <i class="fas fa-square-minus"></i>
        </a>
        {{name}}
    </td>
    <td class="c2d10-contentbox {{#if showEffects}}fancy-effects{{/if}} asset c2d10-capitalize">
        {{system.traitType}}
    </td>
    <td class="c2d10-contentbox {{#if showEffects}}fancy-effects{{/if}} asset">
        <div class="flex-row flex-center">
            {{#dots system.level 5}}{{/dots}}
        </div>
    </td>
</tr>