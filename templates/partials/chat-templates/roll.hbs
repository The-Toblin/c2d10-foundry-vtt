{{log this}}
<section class="c2d10-chat-roll-message flex-col flex-start" data-DC="{{DC}}" data-hits="{{hits}}" data-weapon-damage="{{damage}}" data-damage-type="{{damageType}}">
    <div class="flex-col flex-start">
        <h2 class="align-center c2d10-capitalize">{{name}}</h2>
        <h3 class="align-center c2d10-capitalize">
            [{{localize "c2d10.chat.DC"}} {{DC}}]
            {{pool1Name}}
            {{#unless (eq pool2Name "None")}}
            + {{pool2Name}} 
            {{/unless}}
        </h3>
    </div>
    <div class="c2d10-chat-roll">
        {{{roll}}}
    </div>
    {{#if attack}} 
        <div class="c2d10-contentbox align-center button-box">
            <button class="defend">{{localize "c2d10.chat.defend"}}!</button>
        </div>
    {{/if}}
    {{#if defense}}
        <div class="c2d10-contentbox flex-row flex-between">
            <div>
                {{damage}}
            </div>
            <div>
                {{damageType}}
            </div>
        </div>
    {{/if}}
</section>
