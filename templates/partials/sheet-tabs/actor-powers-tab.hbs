<section>
    <h3>
        {{localize "c2d10.sheet.powers"}}
    </h3>
    <div class="content-box c2d10-subsection flex-row flex-between">
        <div class="flex-col flex-start w-100">
            <table class="c2d10-asset-card-table">
                <colgroup>
                    <col class="w-20">
                    <col class="w-20">
                    <col class="w-60">
                </colgroup>
                <tr>
                    <th class="table-no-border">
                        {{localize "c2d10.powers.name"}}
                    </th>
                    <th class="table-no-border">
                        {{localize "c2d10.powers.parent"}}
                    </th>
                    <th class="table-no-border">
                        {{localize "c2d10.powers.description"}}
                    </th>
                </tr>
                {{#each variants as |item id|}}
                {{> "systems/c2d10/templates/partials/list-items/variant-list-item.hbs"}}
                {{/each}}
            </table>
        </div>
    </div>
</section>