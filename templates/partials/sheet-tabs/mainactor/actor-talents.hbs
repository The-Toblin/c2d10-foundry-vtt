                            <td class="flex-row table-no-border resource-row" data-type="talents" data-group="social" data-id="{{name}}" data-tooltip="{{localize "c2d10.sheet.dot-tooltip"}}">
                                {{#dots level 5}}{{/dots}}
                            </td>
                        </tr>
                    {{/each}}
                </table>
            </div>
        </div>
        <div class="flex-col flex-start w-100">
            <h3>
                {{localize "c2d10.talents.mental"}}
