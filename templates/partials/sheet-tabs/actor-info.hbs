<section>
    <h3>
        {{localize "c2d10.sheet.info"}}
    </h3>
    <div class="content-box c2d10-subsection">
        <div class="flex-row flex-between">
            <div class="c2d10-contentbox {{#if showEffects}}fancy-effects{{/if}} w-fit">
                <div class="image-box">
                    <img class="actor-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="145px" />
                </div>
            </div>
            <div class="c2d10-contentbox {{#if showEffects}}fancy-effects{{/if}} w-100">
                <table>
                    <tr>
                        <th>
                            {{localize "c2d10.character.name"}}
                        </th>
                        <td>
                            <input name="name" type="text" value="{{actor.name}}" placeholder="{{localize "c2d10.character.name"}}" />
                        </td>
                        <th>
                            {{localize "c2d10.character.campaign"}}
                        </th>
                        <td>
                            <input name="system.info.campaign" type="text" value="{{system.info.campaign}}" placeholder="{{localize "c2d10.character.campaign"}}" />
                        </td>
                    </tr>
                    <tr>
                        <th>
                            {{localize "c2d10.character.concept"}}
                        </th>
                        <td>
                            <input name="system.info.concept" type="text" value="{{system.info.concept}}" placeholder="{{localize "c2d10.character.concept"}}" />
                        </td>
                        <th>
                            {{localize "c2d10.character.ambition"}}
                        </th>
                        <td>
                            <input name="system.info.ambition" type="text" value="{{system.info.ambition}}" placeholder="{{localize "c2d10.character.ambition"}}" />
                        </td>
                    </tr>
                    <tr>
                        <th>
                            {{localize "c2d10.character.species"}}
                        </th>
                        <td>
                            <input name="system.info.species" type="text" value="{{system.info.species}}" placeholder="{{localize "c2d10.character.species"}}" />
                        </td>
                        <th>
                            {{localize "c2d10.character.faction"}}
                        </th>
                        <td>
                            <input name="system.info.faction" type="text" value="{{system.info.faction}}" placeholder="{{localize "c2d10.character.faction"}}" />
                        </td>
                    </tr>
                </table>
            </div>
            <div class="w-20 flex-col">
                <div class="c2d10-contentbox h-100 {{#if showEffects}}fancy-effects{{/if}} flex-col flex-between">
                    <h3 class="c2d10-test c2d10-wealth-test description" data-tooltip="{{localize "c2d10.descriptions.wealth"}}" data-type="info" data-id="wealth" data-tooltip="{{localize "c2d10.sheet.dot-tooltip"}}">
                        {{localize "c2d10.character.wealth"}}
                    </h3>
                    <div class="flex-row flex-between">
                        <div class="flex-row resource-row" data-type="info" data-id="wealth" data-tooltip="{{localize "c2d10.sheet.dot-tooltip"}}">
                            {{#dots system.info.wealth 5}}{{/dots}}
                        </div>
                    </div>
                </div>
                <div class="c2d10-contentbox h-100 {{#if showEffects}}fancy-effects{{/if}} flex-col flex-center">
                    <h3 class="description" data-tooltip="{{localize "c2d10.descriptions.crisis"}}" data-id="crisis">
                        {{localize "c2d10.resources.crisis"}}
                    </h3>
                <div>
                    <div class="dot-container flex-row resource-row crisis-number crisis-alert {{#if (eq system.health.crisis.value 0)}}crisis-fine{{else if (gt system.health.crisis.value 5)}}crisis-bad{{/if}}"
                    data-type="health" data-id="crisis" data-pass="true" data-tooltip="{{localize "c2d10.sheet.dot-tooltip"}}"
                    >
                        {{system.health.crisis.value}}
                    </div>
                </div>
            </div>
            </div>
        </div>
        <div class="flex-row flex-between">
            <div class="flex-row flex-between c2d10-contentbox {{#if showEffects}}fancy-effects{{/if}} crisis-box w-50 h-100">
                <h3 class="c2d10-test c2d10-health-test description" data-tooltip="{{localize "c2d10.descriptions.strain"}}" data-type="health" data-id="strain">
                    {{localize "c2d10.resources.strain"}}
                </h3>
                <div class="flex-row flex-center resource-row" data-value="{{system.health.strain.value}}" data-type="health" data-id="strain" data-pass="true" data-tooltip="{{localize "c2d10.sheet.health-tooltip"}}">
                    {{#healthdots system.health.strain.value system.health.strain.critical system.health.strain.max "strain"}}{{/healthdots}}
                </div>
            </div>
            <div class="flex-row flex-between c2d10-contentbox {{#if showEffects}}fancy-effects{{/if}} crisis-box w-50 h-100">
                <h3 class="c2d10-test c2d10-health-test description" data-tooltip="{{localize "c2d10.descriptions.stress"}}" data-type="health" data-id="stress">
                    {{localize "c2d10.resources.stress"}}
                </h3>
                <div class="flex-row flex-center resource-row" data-value="{{system.health.stress.value}}" data-type="health" data-id="stress" data-pass="true" data-tooltip="{{localize "c2d10.sheet.health-tooltip"}}">
                    {{#healthdots system.health.stress.value system.health.stress.critical system.health.stress.max "stress"}}{{/healthdots}}
                </div>
            </div>
        </div>
    </div>
</section>