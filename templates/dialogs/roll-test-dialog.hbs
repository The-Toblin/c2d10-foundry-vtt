<form class="flex-col flex-start c2d10-dialog">
    <div class="c2d10-subsection">
        <h3 class="align-center c2d10-capitalize">
            {{pool1Name}} {{localize "c2d10.test-dialog.pool1"}}
        </h3>
        <div class="c2d10-contentbox flex-row">
            <input class="align-center"
                id="pool1Level"
                type="text"
                value="{{pool1Level}}"
                placeholder="{{localize "c2d10.test-dialog.pool1"}}"
                autofocus
             />
        </div>
    </div>
    <div class="c2d10-subsection">
        <h3 class="align-center">
            {{localize "c2d10.test-dialog.pool2"}}
        </h3>
        <div class="c2d10-contentbox">
            {{#if talentsList}}
                <select id="pool2name">
                    <option value="None">None</option>
                    {{selectOptions talentsList selected=preSelectedTalent localize=true}}
                </select>
            {{/if}}
        </div>
    </div>
    <div class="flex-row flex-between">
        <div class="c2d10-subsection w-40 h-100">
            <h3 class="align-center c2d10-capitalize">
                {{localize "c2d10.sheet.focus"}}
            </h3>
            <div class="c2d10-contentbox flex-row flex-center c2d10-dark-background">
                <div style="position: relative;">
                    <input id="focus" name="focus" type="checkbox" value="off"/>
                </div>
            </div>
        </div>
        <div class="c2d10-subsection w-60 h-100">
            <h3 class="align-center c2d10-capitalize">
                {{localize "c2d10.sheet.trait"}}
            </h3>
            <div class="c2d10-contentbox flex-row flex-center c2d10-dark-background">
               <input class="align-center"
                id="trait"
                type="text"
                value="{{trait}}"
                placeholder="{{localize "c2d10.sheet.trait"}}"
             />
            </div>
        </div>
    </div>
    <div class="c2d10-subsection">
        <h3 class="align-center">
            {{localize "c2d10.test-dialog.crisis"}}
        </h3>
        <div class="c2d10-contentbox">
            <input class="align-center" id="crisis" type="text" value="{{crisis}}" placeholder="{{localize "c2d10.test-dialog.crisis"}}" />
        </div>
    </div>
</form>