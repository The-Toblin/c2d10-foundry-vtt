<form class="sheet-main-content c2d10 sheet flex-col flex-start">
    <section class="c2d10-sheet-header-box">
        <h1>
            <input name="name" type="text" value="{{item.name}}" placeholder="{{localize "c2d10.asset.name"}}"/>
        </h1>
        <h3 class="c2d10-alert">
            <input name="system.assetType" type="text" value="{{system.assetType}}" placeholder="{{localize "c2d10.asset.assetType"}}"/>
        </h3>
    </section>
    <section>
        <div class="c2d10-subsection flex-row flex-between">
            <div class="w-80 c2d10-contentbox {{#if showEffects}}fancy-effects{{/if}} c2d10-asset-textarea">
                <textarea name="system.description">{{system.description}}</textarea>
            </div>
            <div class="flex-col flex-start">
                <div class="c2d10-contentbox {{#if showEffects}}fancy-effects{{/if}} w-fit">
                    <div class="image-box flex-row flex-center">
                        <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" height="145px" width="auto"/>
                    </div>
                </div>
                <div class="flex-col flex-start w-20 value-box c2d10-contentbox {{#if showEffects}}fancy-effects{{/if}}">
                    <table>
                        <colgroup>
                            <col class="w-50">
                            <col class="w-50">
                        </colgroup>
                        <tr>
                            <th class="table-no-border">
                                {{localize "c2d10.asset.value"}}
                            </th>
                            <td class="flex-row table-no-border resource-row" data-id="value" data-tooltip="{{localize "c2d10.sheet.dot-tooltip"}}">
                                {{#dots system.value 5}}{{/dots}}
                            </td>
                        </tr>
                        <tr>
                            <th class="table-no-border">{{localize "c2d10.cybernetics.manufacturer"}}</th>
                            <td class="table-no-border">
                                 <input class="c2d10-sheet-entry" name="system.manufacturer" type="text" value="{{system.manufacturer}}"/>
                            </td>
                        </tr>
                        <tr>
                            <th class="table-no-border">
                                {{localize "c2d10.cybernetics.load"}}
                            </th>
                            <td class="flex-row table-no-border resource-row">
                                <input class="c2d10-sheet-entry" name="system.load" type="text" value="{{system.load}}"/>
                            </td>
                        </tr>
                        <tr>
                            <th class="table-no-border">
                                {{localize "c2d10.cybernetics.surgery"}}
                            </th>
                            <td class="flex-row table-no-border resource-row">
                                <input class="c2d10-sheet-entry" name="system.surgery" type="text" value="{{system.surgery}}"/>
                            </td>
                        </tr>
                        <tr>
                            <th class="table-no-border">{{localize "c2d10.cybernetics.register"}}</th>
                            <td class="table-no-border">
                                 <input class="c2d10-sheet-entry" name="system.register" type="text" value="{{system.register}}"/>
                            </td>
                        </tr>
                        <tr>
                            <th class="table-no-border">{{localize "c2d10.cybernetics.restricted"}}</th>
                            <td class="table-no-border">
                                 <input class="c2d10-sheet-entry" name="system.restricted" type="text" value="{{system.restricted}}"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </section>
</form>