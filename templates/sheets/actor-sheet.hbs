<form class="{{cssClass}}" autocomplete="off">
    <div class="sheet-main-content c2d10-section flex-row flex-start">
        {{#if locked}}
            <div class="edit-lock red">
                <i class="fas fa-lock"></i>
            </div>
        {{else}}
            <div class="edit-lock green">
                <i class="fas fa-lock-open"></i>
            </div>
        {{/if}}
        <section class="nav-tabs">
            <div class="xp-box c2d10-contentbox{{#if showEffects}} fancy-effects{{/if}} flex-col flex-start">
                <h3>
                    {{localize "c2d10.sheet.experience"}}
                </h3>
                <div>
                    <input name="system.info.experience" type="text" value="{{system.info.experience}}" placeholder="{{localize "c2d10.sheet.experience"}}" />
                </div>
            </div>
            <nav class="sheet-tabs tabs" data-group="primary">
                <a class="item" data-tab="info">{{localize "c2d10.sheet.info"}}</a>
                <a class="item" data-tab="bio">{{localize "c2d10.sheet.bio"}}</a>
                <a class="item" data-tab="focus">{{localize "c2d10.sheet.focus"}}</a>
                {{#if traits}}
                    <a class="item" data-tab="traits">{{localize "c2d10.sheet.traits"}}</a>
                {{/if}}
                {{#if assets}}
                    <a class="item" data-tab="assets">{{localize "c2d10.sheet.assets"}}</a>
                {{/if}}
                {{#if variants}}
                    <a class="item" data-tab="powers">{{localize "c2d10.sheet.powers"}}</a>
                {{/if}}
            </nav>
        </section>
        <section id="tabs" class="sheet-body">
            {{!-- Info Tab --}}
            <div class="tab sheet-info" data-group="primary" data-tab="info">
                {{> "systems/c2d10/templates/partials/sheet-tabs/actor-info.hbs"}}
                {{> "systems/c2d10/templates/partials/sheet-tabs/actor-talents.hbs"}}
                {{> "systems/c2d10/templates/partials/sheet-tabs/actor-skills.hbs"}}
            </div>
            {{!-- Bio Tab --}}
            <div class="tab sheet-bio" data-group="primary" data-tab="bio">
{{!DO NOT UNINDENT! Will break handlebars handling of textareas}}
{{> "systems/c2d10/templates/partials/sheet-tabs/actor-bio.hbs"}}
            </div>
            {{!-- Focus Tab --}}
            <div class="tab sheet-focus" data-group="primary" data-tab="focus">
                {{> "systems/c2d10/templates/partials/sheet-tabs/actor-focus-tab.hbs"}}
            </div>
            {{!-- Traits Tab --}}
            {{#if traits }}
                <div class="tab sheet-traits" data-group="primary" data-tab="traits">
                    {{> "systems/c2d10/templates/partials/sheet-tabs/actor-traits-tab.hbs"}}
                </div>
            {{/if}}
            {{!-- Assets Tab --}}
            {{#if assets}}
                <div class="tab sheet-assets" data-group="primary" data-tab="assets">
                    {{> "systems/c2d10/templates/partials/sheet-tabs/actor-assets-tab.hbs"}}
                </div>
            {{/if}}
            {{!-- Powers Tab --}}
            {{#if variants}}
                <div class="tab sheet-powers" data-group="primary" data-tab="powers">
                    {{> "systems/c2d10/templates/partials/sheet-tabs/actor-powers-tab.hbs"}}
                </div>
            {{/if}}
        </section>
    </div>
</form>