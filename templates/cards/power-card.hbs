<section class="c2d10-contentbox flex-col variant-item w-33 flex-wrap" data-item-id="{{this._id}}" data-owner-id="{{this.parent._id}}">
    <div class="flex-col flex-start">
        <label class="c2d10-capitalize align-center">{{this.name}}</label>
    </div>
    <div class="flex-row flex-between">
        <img class="item-img" src="{{this.img}}" data-edit="img" title="{{this.name}}" width="100px" height="auto" />
        <div class="c2d10-contentbox w-100">
            {{{this.system.short-description}}}
        </div>
    </div>
    <div class="flex-row flex-between c2d10-contentbox">
        <div>
            {{localize "c2d10.powers.cost"}}
        </div>
        <div>
            {{this.system.cost}}
        </div>
    </div>
</section>